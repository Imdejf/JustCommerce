                        }

                        public override async Task<Unit> Handle($Name$ request, CancellationToken cancellationToken)
                        {
                            throw new System.NotImplementedException();
                        }
                    }	

                    public sealed class Validator : AbstractValidator<$Name$> 
                    {
                        public Validator()
                        {

                        }
                    }		
				]]>
            </Code>
